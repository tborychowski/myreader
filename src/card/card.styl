@import "_lib";

card-padding = 20px;
card-shadow = 0 1 2 #000 .3;

.card
	bg #fff; padding card-padding card-padding 0; margin 10; position relative;
	shadow card-shadow;

	a
		u 0; color #08c;
		&:hover
			u 1;


.card-header
	show 2;

.card-title
	margin 0; b 0; font 18/28px;


.card-subtitle
	font 13/1; b 0; margin 0; color #999;
	a
		color #666; padding-left 3;

.card-date
	font 12/1; float right; color #666; margin 5 0 0 0;



.card-body
	font 13/1.6; padding 20 0 0; overflow hidden;



.card-footer
	bg #f5f5f5;	border-top #e5e5e5; margin 20 (-(card-padding)) 0; padding 15 (card-padding - 8);

	.icon
		font 21; text-align center; margin-right 25; color #999; vertical-align top;
		padding 10 10;

	.icon-right
		float right; margin-left 25; margin-right 0;


.home
	.card-body
		max-height 3em;
	.card.expanded .card-body
		max-height initial;

	.card-footer
		padding-top 0; padding-bottom 0;



.card
	.btn-mark-read
	.btn-mark-unstarred
	.btn-collapse
	&.expanded .btn-expand
	&.unread .btn-mark-unread
	&.starred .btn-mark-starred
		show 0;

	.btn-mark-unread
	.btn-mark-starred
	.btn-expand
	&.expanded .btn-collapse
	&.unread .btn-mark-read
	&.starred .btn-mark-unstarred
		show 1;


.card.active
	&:before
		content ''; pos 0 auto 0 0; width 4; border-radius 0 2 2 0;
		bg #08c; shadow 2 1 1 #000 .2 inset;
