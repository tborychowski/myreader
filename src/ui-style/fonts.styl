@import "_lib"

path = '../fonts/'

@font-face
	font-family 'open_sanslight'
	src url(path + 'OpenSans-Light-webfont.woff') format('woff'),
		 url(path + 'OpenSans-Light-webfont.ttf') format('truetype'),
		 url(path + 'OpenSans-Light-webfont.svg#open_sanslight') format('svg')
	font-weight normal
	font-style normal

