<div id="source<?PHP echo isset($this->source) ? $this->source['id'] : ''; ?>" class="source <?PHP echo isset($this->source)===false ? 'source-new' : ''; ?>">
    <div class="source-icon">
        <?PHP if(isset($this->source) && isset($this->source['icon']) && $this->source['icon']!==false && $this->source['icon']!="0") : ?>
        <img src="<?PHP echo 'favicons/'.$this->source['icon']; ?>" alt="<?PHP echo isset($this->source) ? $this->source['title'] : ''; ?>" />
        <?PHP endif; ?>
    </div>

    <div class="source-title"><?PHP echo isset($this->source) ? $this->source['title'] : 'new unsaved source'; ?></div>

    <div class="source-edit-delete"><span class="source-showparams">edit</span> &bullet; <span class="source-delete">delete</span></div>

    <!-- edit -->
    <ul class="source-edit-form">
        <!-- title -->
        <li><label>Title:</label> <input type="text" id="title" value="<?PHP echo isset($this->source) ? $this->source['title'] : 'new unsaved source'; ?>" /></li>

        <!-- tags -->
        <li><label>Tags:</label>
            <input type="text" id="tags" value="<?PHP echo isset($this->source) ? $this->source['tags'] : ''; ?>" /> <span class="source-edit-form-help">comma separated</span>
        </li>

        <!-- type -->
        <li><label>Type:</label>
            <select class="source-spout" id="spout">
                <option value="">please select source</option>
                <?PHP foreach($this->spouts as $spouttype=>$spout) : ?>
                <option value="<?PHP echo str_replace("\\", "_", $spouttype); ?>" <?PHP echo isset($this->source) && $spouttype==$this->source['spout'] ? 'selected="selected"' : ''; ?>>
                    <?PHP echo $spout->name; ?>
                </option>
                <?PHP endforeach; ?>
            </select>
        </li>

        <!-- settings -->
        <li class="source-params">
        <?PHP
            if(isset($this->source) && isset($this->spouts[$this->source['spout']])) {
                if($this->spouts[$this->source['spout']]->params!==false) {
                    $this->spout = $this->spouts[$this->source['spout']];
                    $this->params = json_decode(html_entity_decode($this->source['params']), true);
                    echo $this->render('templates/source_params.phtml');
                }
            }
        ?>
        </li>

        <!-- error messages -->
        <?PHP if(isset($this->source) && isset($this->source['error'])) : ?>
        <li class="source-error"><?PHP echo $this->source['error']; ?></li>
        <?PHP endif; ?>

        <!-- save/delete -->
        <li class="source-action">
            <span class="source-save">save</span> &bullet; <span class="source-cancel">cancel</span>
        </li>
    </ul>


</div>