@import "_lib";


sidebar-width = 180px
toolbar-height = 40px

html
	font-family sans-serif
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
html
body
	height 100%;

body
	margin 0; padding-left sidebar-width

a:focus
	outline none;
button
input
	font-family inherit; font-size 100%;
	&::-moz-focus-inner
		padding 0; border 0;





/*** SIDEBAR **********************************************************************************************************/
#sidebar
	position fixed; top 0; left 0; bottom 0; width sidebar-width; pad 45 0 0; border-box(); font 13;
	bg #333 'noise.png' 0 0 repeat; overflow hidden; overflow-y auto;
	-webkit-transform translateZ(0);


	.sidebar-wrapper
		position absolute; top 90px; bottom toolbar-height; left 0; width (sidebar-width + 20); pad 0;
		overflow hidden; overflow-y auto;

	.nav-list
		pad 0; list-style none; width 180;
		&:last-child
			margin-bottom 10px;

	.nav-header
		color #999; text-shadow 0 -1px 0 rgba(#000, .4); cursor default; show 2; font 13/20px; b 1; pad 0;
		text-transform uppercase; overflow hidden;
		.nav-name
			line-height 18px;
		.nav-name:hover
			color #eee;

	.nav-row
		text-shadow 0 -1px 0 rgba(#000, .4); color #A4A4A4; overflow hidden; pad 4 15; margin-bottom 3px; show 2;
		border-top 1px solid transparent; border-bottom 1px solid transparent;
		&:hover
			color #eee;

		.badge
		.no-badge
		.btn-settings
			float right; margin-left -100%; position relative;

		.badge
		.no-badge
			vertical-align middle; font 12px/15px; padding 0 2 0 0; radius 2; show 1; white-space nowrap;
		.badge
			background-color #999; color #FFF; b 1; text-shadow 0 -1px 0 rgba(#000, .25); padding 2 6 1;

		.icon-rss
		.nav-icon
		.nav-icon img
			float left; size 16;
		.icon-rss
			font 16; color #888; opacity .3;
		.nav-icon
			margin-right 8px;

		.nav-name
			float left; height 16; vertical-align middle; white-space nowrap; max-width 120px;
			overflow hidden; text-overflow ellipsis;

		.nav-btn
			&.nav-type
				font 16;

	.nav-tag
		margin-top 15px;
		.nav-name
			b 1; text-transform uppercase; line-height 15px
	.nav-src
		.nav-name
			line-height 15px

	.active .nav-row
	.nav-row:focus
		color #C8BCBE; gradient #492527 #3B1017; border-bottom #29060D; border-top #5D393D;
		shadow 0 -1 0 #2F2F2F, 0 1 1 #2F2F2F

/*** SIDEBAR **********************************************************************************************************/






/*** MAIN CONTENT *****************************************************************************************************/
#main
	position relative; mar 0; border-box(); color #999; text center; z 1; float right;
	width 100%; min-width 768px; min-height 100%; padding-bottom 50%;
	box-shadow: -5px 0 5px rgba(0,0,0,0.5); bg #ddd 'noise.png' 0 0 repeat;

	.main-wrapper
		position relative;
	.entry
		text left; background-color #f9f9f9; border-bottom #aaa; transition background-color .5s;
		a
			color #888; transition color .5s; u 0;
			&:hover
				u 1;
		i
			margin-right 7px; font 14;

		.tb-btn
			mar 0 10 0 5; cursor default; font 13; text-shadow 0 1px 0 #fff; b 1; color #888; pad 7 10; show 1;
			transition color .2s;
			&:hover
				color #666;
		.pull-right .tb-btn
			margin-left 15px; margin-right 0;
		.mark-unread
		.addstar
		.expand
			show 1;
		.mark-read
		.unstar
		.collapse
			show 0;
		&.active
		&.unread
			background-color #fff;
		&.unread a
			color #0088CC

	.unread .mark-unread
	.starred .addstar
	.expanded .expand
		show 0
	.unread .mark-read
	.starred .unstar
	.expanded .collapse
		show 1

	.entry-body
		font 13/1.5; pad 10 15 5; clear both; max-height 200px; overflow hidden; //overflow-y auto;
		p
			margin-bottom 5px
		p>img,
		div>div>a>img
			float right; clear right; max-width 250px; max-height 200px; margin 3px 0 10px 20px

	.entry-header
		overflow hidden; pad 12 15 10; border-bottom #eee;
		h3
			font 18/28px; margin 0;
			b 0;
		.entry-source
			color #999; font 12; margin-left 2px
		a.entry-source
			color #666; margin-left 4px;
		.entry-time
			float right; mar 5 0 0 5; color #666; font 12;

	.entry-footer
		pad 0; bg #ddd 'noise.png' 0 0 repeat; border-top #aaa; shadow 0 1 0 #fff 1 inset; position relative;

/*** MAIN CONTENT *****************************************************************************************************/





#sideLogo
	position absolute; top 0; left 0; font 24; color #999; pad 5 0 0 15; opacity .3; non-selectable();
	.icon-rss
		font 34; vertical-align bottom; margin-right -4px;
		&:before
			rotate 270

#mainLogo
	font 270; margin -155 0 0 0; color #ccc; text-shadow 0 1px 0 #fff, 1px -1px 0 #aaa; opacity .4; cursor default;
	position fixed; top 48%; left 50%;





/*** TOOLBAR **********************************************************************************************************/
#toolbar
	position fixed; left 0; right 0; bottom 0; padding-left sidebar-width; height toolbar-height; z 1; border-box();
	-webkit-transform translateZ(0);

	.btn
		color #888; font 13/1.5; height 40; min-width 48px; margin-right 18px; pad 0 10; bg none; border none;
		transition color .2s; text-shadow 0 1px 0 #fff; b 1;
		&:hover
			color #555;
		&:active
			color #000;
		i
			font 20/1; b 0; vertical-align top;
	.btn-group
		radius 15; border #999; height 30; mar 4 10 0 10; shadow 0 1 0 #fff; bg #ddd; pad 0 5;
		.btn
			height 30; mar 0 5 0 0; position relative; padding-top 3px;
		.badge
			font 11/1; b 1; pos 2 0; bg #666; color #FFF; padding 2 5 1; radius 10; text-shadow none;

	#mainToolbar
		size 100% toolbar-height; z 1; position relative; float right; min-width 768px;
		bg #ddd 'noise.png' 0 0 repeat; border-top #aaa; text center
		shadow 0 1 0 #fff 1 inset, -5 3 5 #000 .5;

	#sideToolbar
		position absolute; left 0; background #222; size sidebar-width toolbar-height; text center
		bg #333 'noise.png' 0 0 repeat; border-top #222; shadow 0 1 0 #555 1 inset;

		.btn
			color #666; text-shadow 0 -1px 0 #000;
			&:hover
				color #999;
			&:active
				color #555;
		.pull-right
			margin-right 0;

/*** TOOLBAR **********************************************************************************************************/








/*** SETTINGS CONTENT *************************************************************************************************/
#main.settings .entry
	input
		pad 2 4; mar 0 5 5 0
		&[name="url"]
			width 400
	.error
		color red; mar 0;
	.entry-header h3 img
		mar 0 5 -1 0
	.btn-save
	.btn-cancel
		show 0;
	&.in-edit
		.btn-edit
		.btn-remove
			show 0;
		.btn-save
		.btn-cancel
			show 1;
/*** SETTINGS CONTENT *************************************************************************************************/





/*** LOGIN ************************************************************************************************************/
html.login
	bg #333 'noise.png' 0 0 repeat;
	body
		height 100%; padding 0;
	form
		show 2; radius 1; pad 15 40 30; gradient #ddd #aaa; mar -80px auto 0; width 170; border #000; top 50%;
		shadow 0 15 15 2 #fff .5 inset, 0 2 20 2 #000 .6; position relative;
	label
		show 2; color: #444; b 1; font 12; pad 10 0 0; mar 0; text-shadow 0 1px 0 #fff; non-selectable();
	input[type]
		pad 3 4; font 15; size 100% auto; border-box(); bg rgba(#fff,.6); radius 1; border #777; shadow: 0 1 0 #fff .5, 0 1 2 #000 .2 inset
		&:focus
			bg rgba(#fff, .9)
	button
		pos(); visibility hidden;
/*** LOGIN ************************************************************************************************************/





@media all and (max-width: 785px)
	body
	#toolbar
		padding-left 0;
		#main
		#mainToolbar
			width 100%; min-width 0;
